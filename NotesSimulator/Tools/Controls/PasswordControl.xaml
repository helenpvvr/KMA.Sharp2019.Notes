<UserControl x:Class="KMA.Sharp2019.Notes.MoreThanNotes.NotesSimulator.Tools.Controls.PasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:t="clr-namespace:KMA.Sharp2019.Notes.MoreThanNotes.NotesSimulator.Tools" 
             xmlns:controls="clr-namespace:KMA.Sharp2019.Notes.MoreThanNotes.NotesSimulator.Tools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="200">
    <Grid>
        <PasswordBox Name="TextBox" VerticalAlignment="Center" Padding="5" t:PasswordBoxAssistant.BindPassword="True"
                     t:PasswordBoxAssistant.BoundPassword="{Binding Password, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:PasswordControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
